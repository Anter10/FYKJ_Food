<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jjkj.guoyouchao.fykj_food.AddFoodActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="wrap_content"
            android:id="@+id/firstid"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/add_food_pic_width"
                android:paddingTop="35dp"
                android:id="@+id/food_image"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@color/appbar"
                android:layout_height="@dimen/add_food_pic_height" />


        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:paddingTop="50dp"
            android:paddingLeft="8dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:text="@string/edit_food_pic"
                android:textSize="@dimen/edit_food_pic_font"
                android:textColor="@color/white_color"

                android:layout_gravity="right"
                android:layout_height="wrap_content" />

        </FrameLayout>


        <FrameLayout
            android:layout_width="wrap_content"
            android:paddingLeft="140dp"

            android:layout_height="wrap_content">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:hint="请输入菜品名称"
                    android:maxLines="1"
                    android:id="@+id/add_food_name"
                    android:textColorHint="@color/appbar"
                    android:textColor="@color/appbar"
                    android:layout_width="wrap_content" />

                <EditText
                    android:hint="请输入菜品价格"
                    android:id="@+id/add_food_price"
                    android:textColorHint="@color/appbar"
                    android:layout_marginTop="30dp"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="@color/appbar"
                    android:layout_width="wrap_content" />



            </TableLayout>

        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginTop="140dp"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/first_ok_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_word"
                android:maxLines="1"
                android:textSize="@dimen/ok_word_size"
                android:background="@drawable/buttonshape"
                android:textColor="@color/white_color"
                android:layout_marginTop="80dp"
                android:layout_gravity="bottom|center_horizontal"
                />

            <EditText
                android:layout_width="match_parent"
                android:hint="请输入菜品简介"
                android:maxLines="1"

                android:textColorHint="@color/appbar"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top" />

        </FrameLayout>


    </FrameLayout>


</RelativeLayout>
